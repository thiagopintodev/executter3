<%# '.form-horizontal', '.form-inline', '.form-search' or
  '.form-vertical' %>
<%= simple_form_for(@post, html: {class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :site %>
    <%= f.input :verb %>
    <%= f.input :text %>
    <%= f.input :comments_count %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
