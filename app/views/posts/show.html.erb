<p id="notice"><%= notice %></p>

<p>
  <strong>Site:</strong>
  <%= @post.site.l_ %>
</p>

<p>
  <strong>Verb:</strong>
  <%= @post.verb %>
</p>

<p>
  <strong>Text:</strong>
  <%= @post.text %>
</p>

<p>
  <strong>Comments count:</strong>
  <%= @post.comments_count %>
</p>

<% if can? @post, :destroy %>
  <%= link_to 'delete', @post, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
