
<section class="section">
<p>
  <strong>Owner:</strong>
  <%= @site.owner.full_name %>
</p>

<p>
  <strong>Permalink:</strong>
  <%= @site.at_permalink %>
</p>
</section>

<section id="relations" class="section">
  <p><%= @site.followings.count %> followings</p>
  <p><%= @site.followers.count %> followers</p>
  <hr />
  <% if not me %>
    <p><%= link_to "+ Follow #{@site.owner.full_name}", root_path %></p>
  <% elsif @relations.am_follower %>
    <p><%= link_to "- Unfollow #{@site.owner.full_name}", site_unfollow_path(@site) %></p>
  <% else %>
    <p><%= link_to "+ Follow #{@site.owner.full_name}", site_follow_path(@site) %></p>
  <% end %>
</section>

<section id="posts" class="section">
<h1>posts by <%= @site.at_permalink %> (<%= @site.owner.full_name %>)</h1>
  <% @posts.each do |post| %>
    <p><%= link_to post.body, post %></p>
  <% end %>
</section>


<section id="followers" class="section">
<h1><%= @site.at_permalink %>'s followers</h1>
  <% @site.followers.map(&:other).each do |site| %>
    <%= link_to site_path(site) do %>
      <%= site.owner.full_name %>
      <%= site.at_permalink %>
    <% end %>
    <hr />
  <% end %>
</section>
