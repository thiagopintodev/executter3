<div>
<%= simple_form_for @user, url: password_path, method: 'post', class: 'form-horizontal' do |f| %>

  <div class="form-inputs">
    <%= f.input :password, label: "New Password" %>
    <%= f.input :password_confirmation %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Continue" %>
  </div>
<% end %>
</div>